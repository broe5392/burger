<h1>EAT-DER-BERGER!!</h1>

<div class="container">
    <div class="row">
        <div class="col s6">
            <h2>Fresh Bergers!!</h2>
            {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burgers-block devoured=true}}
            {{/unless}}
            {{/each}}
        </div>

        <div class="col s6">
            <h2>Devoured Bergers!</h2>
            {{#each burgers}}
            {{#if devoured}}
                    <div>
                        {{> burgers/burgers-block devoured=false}}
                    </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<h2>Add a new BERGER.</h2>

<form class="create-form">

    <div class="form-group">
        <label for="berger">berger type?</label>
        <input type="text" id="berger" name="burger_name">
    </div>

    <button type="submit">Add a Berger!!</button>
</form>